= turbo_frame_tag "new_message", target: '_top' do
  = form_with model: [ @conversation, Message.new ] do |f|
    = f.hidden_field :conversation_id, value: @conversation.id
    = f.hidden_field :author_id, value: current_user.id
    - Message.positions.each do |p|
      = f.radio_button :position, p[1]
    = f.text_area :text, placeholder: 'type here', class: ''
    %br
    %br
    = f.submit 'send', class: 'btn small-btn'